{
    "train_datasets":["FreiHand"],
    "val_datasets":["FreiHand"],
    "freihand_base_path": "../freihand",
    "base_out_path": "outputs/freihand/texture",
    "is_write_tb": true,
    "writer_topic": "runs/freihand/texture/", 
    "total_epochs": 500,
    "init_lr": 0.001,
    "force_init_lr": 0.001,
    "lr_steps": [50, 80, 110, 160, 200, 300, 350, 400, 450],
    "lr_gamma": 0.5,
    "save_interval": 10,
    "controlled_exp": false,
    "controlled_size": 100,
    "train_batch":48,
    "val_batch":16,
    "num_workers":8,
    "if_test": true,
    "save_2d": false,
    "save_3d": false,
    "save_mode": "only_latest",
    "demo_freq": 60,

    "new_model": true,
    "render": true,
    "four_channel": false,
    "hand_model": "nimble",
    "base_loss_fn": "L1",
    "use_mean_shape": false,

    "lambda_j3d": 10,
    "lambda_vert_3d": 20,
    "lambda_edge_len": 10,
    "lambda_silhouette": 0.0008,
    "lambda_tex_reg_steps": [260, 270],
    "lambda_tex_reg_list": [5e-4, 5e-5, 5e-7],
    "lambda_pose_steps": [10, 20],
    "lambda_pose_list": [0.01, 0.001, 0.00001],
    "lambda_shape_steps": [10, 20],
    "lambda_shape_list": [0.1, 0.001, 0.00001],

    "pretrain": "res101",
    "pretrain_model": "outputs/freihand/shape_no_render/model/texturehand_latest.t7",


    "train_queries": ["trans_images","trans_Ks","trans_joints", "scales", "trans_verts", "trans_masks"],
    "val_queries": ["images","Ks","joints", "scales", "verts", "masks"],
    "losses": ["joint_3d", "vert_3d", "mpose", "mshape", "mtex", 
                "bone_direc", "edge_length", 
                "texture", "mrgb", "sil", "ssim_tex"], 
    "train_requires": ["joints", "verts"],
    "test_requires": ["joints", "verts"],
    "task": "train",
    "mode": ["training"]
}