{
    "train_datasets":["RHD"],
    "val_datasets":["RHD"],
    "rhd_base_path": "../RHD_published_v2",
    "base_out_path": "outputs/RHD/baseline_3",
    "is_write_tb": true,
    "writer_topic": "runs/RHD/baseline_3/", 
    "total_epochs": 250,
    "init_lr": 0.001,
    "lr_steps": [100, 140, 180, 220],
    "lr_gamma": 0.5,
    "save_interval": 5,
    "controlled_exp": false,
    "controlled_size": 1000,
    "train_batch":80,
    "val_batch":32,
    "num_workers":16,
    "if_test": true,
    "save_2d": false,
    "save_3d": false,
    "save_mode": "only_latest",
    "demo_freq": 200,

    "new_model": true,
    "render": false,
    "four_channel": false,
    "hand_model": "nimble",
    "base_loss_fn": "L1",
    "use_mean_shape": true,

    "lambda_j3d": 10,
    "lambda_vert_3d": 10,
    "lambda_pose_steps": [20, 35],
    "lambda_pose_list": [0.06, 0.006, 0.0006],
    "lambda_shape_steps": [10, 20],
    "lambda_shape_list": [0.1, 0.001, 0.00001],

    "pretrain": "effb3",

    "train_queries": ["trans_images","trans_Ks","joints","scales","trans_joints2d"],
    "val_queries": ["trans_images","trans_Ks","joints", "scales",
        "trans_joints2d"],
    "losses": ["joint_3d", "mpose", "bone_direc_3d"], 
    "train_requires": ["joints", "verts"],
    "test_requires": ["joints", "verts"],
    "task": "train",
    "mode": ["training"]
}